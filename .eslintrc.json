{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "env": {
    "jest": true
  },
  "globals": {
    "td": true
  },
  "plugins": ["jest", "prettier", "node"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": 2,
    "node/no-unsupported-features/es-syntax": 0,
    "node/no-unpublished-import": ["off"],
    "max-len": ["error", { "code": 80 }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "printWidth": 80
      }
    ]
  }
}
